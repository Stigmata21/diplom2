{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["support-ws-server.ts"],
  "exclude": ["node_modules"]
} 